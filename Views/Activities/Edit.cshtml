@model ResAktWebb.Models.Activity

@{
    ViewData["Title"] = "Edit";
    Layout = "_Layout_Admin";
}
<div class="my-div">

    <h1>Redigera</h1>
    <h1>@Html.DisplayFor(m => m.Description)</h1>

    <h4>Aktivitet</h4>
    <hr />
    <div class="row">
        <div class="col-md-4 my-div">
            <form asp-action="Edit">

                        @*@Html.DisplayNameFor(m => m.Description)*@ Beskrivning <br />
                        @Html.EditorFor(m => m.Description) <hr /> <br />

                        @*@Html.DisplayNameFor(m => m.Location)*@ Plats <br />
                        @Html.EditorFor(m => m.Location) <hr /> <br />

                        @*@Html.DisplayNameFor(m => m.Price)*@ Pris <br />
                        @Html.EditorFor(m => m.Price) <hr /> <br />

                        @*@Html.DisplayNameFor(m => m.StartTime)*@ Starttid <br />
                        @Html.EditorFor(m => m.StartTime) <hr /> <br />

                        @*@Html.DisplayNameFor(m => m.EndTime)*@ Sluttid <br />
                        @Html.EditorFor(m => m.EndTime) <hr /> <br /> 

                <input type="submit" value="OK" />
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Tillbaka till lista</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
