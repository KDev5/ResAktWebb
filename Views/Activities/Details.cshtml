@model ResAktWebb.Models.Activity

@{
    ViewData["Title"] = "Details";
    Layout = "_Layout_Admin";
}
<div class="my-div">

    <h1>Detaljer</h1>
    <div>
        <h4>Aktivitet</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @*@Html.DisplayNameFor(model => model.Description)*@ Beskrivning
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @*@Html.DisplayNameFor(model => model.Location)*@ Plats
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Location)
            </dd>
            <dt class="col-sm-2">
                @*@Html.DisplayNameFor(model => model.Price)*@ Pris
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-2">
                @*@Html.DisplayNameFor(model => model.StartTime)*@ Starttid
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StartTime)
            </dd>
            <dt class="col-sm-2">
                @*@Html.DisplayNameFor(model => model.EndTime)*@ Sluttid
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EndTime)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id">Redigera</a> |
        <a asp-action="Index">Tillbaka till lista</a>
    </div>

    <div>
        <h1>Deltagare</h1>
        <hr />
        <br />
            @foreach (var a in Model.ActivityBookings)
            {
                <dl class="row">
                    <dt class="col-sm-2">
                            @*@Html.DisplayNameFor(x => a.Id)*@ Id:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(x => a.Id) 
                    </dd>
                    <dt class="col-sm-2">
                        @*@Html.DisplayNameFor(x => a.CustomerName)*@ Namn:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(x => a.CustomerName)
                    </dd>
                    <dt class="col-sm-2">
                        @*@Html.DisplayNameFor(x => a.NumParticipants)*@ Antal personer:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(x => a.NumParticipants)
                    </dd>
                </dl>
                <hr /> <br />
            }
    </div>
</div>
