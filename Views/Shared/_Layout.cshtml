<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Restaurang & Aktiviteter</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="http://193.10.202.77/css/HotelSeasharp.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />


</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style=" background-color: lightgrey; background: rgba(211, 211, 211, 0.8); height: 40%;
        width: 100%;">
            <a class="my-link" href="http://193.10.202.78/GuestWebSite"><h2 class="rubrik1">Hotell SeaSharp</h2></a>

            <div class="containeruppe">
                @*<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Hotell SeaSharp</a>*@
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item"> 
                            <a class="nav-link text-dark" href="http://193.10.202.78/GuestWebSite">HEM</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="http://193.10.202.77/KonferensrumSida">KONFERENSER</a>
                        </li>
                       
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="http://193.10.202.81/Seasharp">BOKA RUM</a>
                        </li>


                        <li class="nav-item dropdown ">
                            <a class="nav-link text-dark" style="font-weight:bold" asp-area="" asp-controller="Home" asp-action="Index">RESTAURANG & AKTIVITETER</a>

                            @*<a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">testAktiviteter</a>*@
                            <div class="nav-link text-dark dropdown-content">
                                <p class="dropdown-item">Restaurang</p>
                                <a class="dropdown-item" asp-area="" asp-controller="Guest" asp-action="RestaurantInfo">Öppettider</a>
                                <a class="dropdown-item" asp-area="" asp-controller="RestaurantInfo" asp-action="FullMenu">Meny</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Reservations" asp-action="Create">Reservera bord</a>
                                <div class="dropdown-divider"></div>
                                <p class="dropdown-item">Aktiviteter</p>
                                <a class="dropdown-item" asp-area="" asp-controller="Guest" asp-action="GetActivities">Visa Aktiviteter</a>
                                @*<a class="dropdown-item" asp-area="" asp-controller="Guest" asp-action="#">Mina Bokningar</a>*@
                                <div class="dropdown-divider"></div>
                                @*<a class="dropdown-item" asp-controller="Admin" asp-action="Index">Logga in som Admin</a>*@
                            </div>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        @*<main role="main" class="pb-3">*@
        @RenderBody()
        @*</main>*@
    </div>
    <div>
        @*<img class="bild" src="http://193.10.202.77/images/hotelbilden.jpg" width="1400" height="900" align="middle" margin-left="auto" margin-right="auto" />*@
    </div>


    

    <footer class="bottenFooter">
        <div class="containernere">
            &copy; 2021 - Hotell SeaSharp - <a asp-area="" asp-controller="Home" asp-action="Index">Till första sidan</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>




