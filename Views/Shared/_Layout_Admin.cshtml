<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ResAktWebb</title>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="http://193.10.202.77/css/HotelSeasharp.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background: rgba(255,127,80,0.6);
            width: 100%;">
            <img src="https://cdn4.iconfinder.com/data/icons/summer-v-2/512/ocean_sea_sun_sunny_sunset_vacation-512.png" width="50" height="50" />
            <h1 class="rubrik1">Hotell SeaSharp</h1>

            <div class="container">
                @*<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Hotel SeaSharp</a>*@
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Hem</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="http://193.10.202.77/KonferensrumSida">KonferensAdmin</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="http://193.10.202.78/PublishGuestAdmin">GästAdmin</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="http://informatik10.ei.hv.se/UserClient">SysAdmin</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="http://193.10.202.81/Seasharpadmin">BokningsAdmin</a>
                        </li>

                        @if (User.IsInRole("ResAdmin"))
                        {
                            <li class="dropdown nav-item">
                                <a class="nav-link text-dark" style="font-weight:bold" asp-area="" asp-controller="Home" asp-action="Index">RestaurangAdmin</a>
                                <div class="nav-link text-dark dropdown-content">
                                    <a class="dropdown-item" asp-area="" asp-controller="Menus" asp-action="Index">Meny</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="RestaurantInfo" asp-action="Index">Restauranginfo</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Reservations" asp-action="Index">Bokningar</a>
                                    <div class="dropdown-divider"></div>
                                    @*<a class="dropdown-item" href="#">Separated link</a>*@
                                </div>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="SignOut">Logga ut</a>
                            </li>

                        }
                        @if (User.IsInRole("ActAdmin"))
                        {
                            <li class="dropdown nav-item">
                                <a class="nav-link text-dark" style="font-weight:bold" asp-area="" asp-controller="Home" asp-action="Index">AktivitetsAdmin</a>
                                <div class="nav-link text-dark dropdown-content">
                                    <a class="dropdown-item" asp-area="" asp-controller="Activities" asp-action="Index">Aktiviteter</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="ActivityBookings" asp-action="Index">Aktivitetsbokningar</a>
                                    <div class="dropdown-divider"></div>
                                    @*<a class="dropdown-item" href="#">Separated link</a>*@
                                </div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="SignOut">Logga ut</a>
                            </li>

                        }


                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Activities" asp-action="Index">Activities</a>
                            </li>
                            @*<li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="RestaurantInfo" asp-action="Index">Resturanginformation</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Menus" asp-action="Index">Menyer</a>
                        </li>*@
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index">Login</a>
                            </li>
                        }

                    </ul>
                    <style>
                        .dropdown {
                            position: relative;
                            display: inline-block;
                        }

                        .dropdown-content {
                            display: none;
                            position: absolute;
                            background-color: #f9f9f9;
                            min-width: 160px;
                            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
                            padding: 12px 16px;
                            z-index: 1;
                        }

                        .dropdown:hover .dropdown-content {
                            display: block;
                        }
                    </style>
                </div>
                @if (User.Identity.IsAuthenticated)
                {
                    <a class="float-right flex-grow-2" style="color: white">Welcome @User.Identity.Name</a>
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="position: fixed; left: 0; bottom: 0;">
        <div class="container">
            &copy; 2021 - ResAktWebb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
