<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ResAktWebb</title>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="http://193.10.202.77/css/HotelSeasharp.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background: rgba(255,127,80,0.6);
            width: 100%;">

            @* Bild som "inte" ska användas *@
            @*<img src="https://cdn4.iconfinder.com/data/icons/summer-v-2/512/ocean_sea_sun_sunny_sunset_vacation-512.png" width="50" height="50" />*@
            <h1 class="rubrik1">Hotell SeaSharp</h1>

            <div class="container">
                @*<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Hotel SeaSharp</a>*@
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="font-weight:bold;" asp-area="" asp-controller="Home" asp-action="Index">HEM</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="font-weight:bold;" href="http://193.10.202.77/KonferensrumSida">KONFERENSADMIN</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="font-weight:bold;" href="http://193.10.202.78/PublishGuestAdmin">GÄSTADMIN</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="font-weight:bold;" href="http://informatik10.ei.hv.se/UserClient">SYSADMIN</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="font-weight:bold;" href="http://193.10.202.81/Seasharpadmin">BOKNINGSADMIN</a>
                        </li>

                        @if (User.IsInRole("ResAdmin"))
                        {
                            <li class="dropdown nav-item">
                                <a class="nav-link text-dark" style="font-weight:bold" asp-area="" asp-controller="Home" asp-action="Index">RESTAURANGADMIN</a>
                                <div class="nav-link text-dark dropdown-content">
                                    <a class="dropdown-item" asp-area="" asp-controller="Menus" asp-action="Index">Meny</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="RestaurantInfo" asp-action="Index">Öppetider</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Reservations" asp-action="Index">Bokningar</a>
                                    <div class="dropdown-divider"></div>
                                    @*<a class="dropdown-item" href="#">Separated link</a>*@
                                </div>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="SignOut">Logga ut</a>
                            </li>

                        }
                        @if (User.IsInRole("ActAdmin"))
                        {
                            <li class="dropdown nav-item">
                                <a class="nav-link text-dark" style="font-weight:bold" asp-area="" asp-controller="Home" asp-action="Index">AKTIVITETSADMIN</a>
                                <div class="nav-link text-dark dropdown-content">
                                    <a class="dropdown-item" asp-area="" asp-controller="Activities" asp-action="Index">Aktiviteter</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="ActivityBookings" asp-action="Index">Aktivitetsbokningar</a>
                                    <div class="dropdown-divider"></div>
                                    @*<a class="dropdown-item" href="#">Separated link</a>*@
                                </div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="SignOut">Logga ut</a>
                            </li>

                        }


                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Activities" asp-action="Index">Aktiviteter</a>
                            </li>
                            
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index">Login</a>
                            </li>
                        }

                    </ul>
               
                </div>
                @if (User.Identity.IsAuthenticated)
                {
                    <p class="float-right flex-grow-2" >Välkommen @User.Identity.Name</p>
                }
            </div>
        </nav>
    </header>
    <div class="bg-img">

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted" style="position: fixed; left: 0; bottom: 0;">
            <div class="container">
                &copy; 2021 - ResAktWebb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>

    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>
