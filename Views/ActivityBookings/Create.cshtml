@model ResAktWebb.Models.ActivityBooking

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout_Admin";
}
<div class="my-div">

    <h1>Skapa ny Aktivitetsbokning</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CustomerName" class="control-label">Kundnamn</label>
                    <input asp-for="CustomerName" class="form-control" />
                    <span asp-validation-for="CustomerName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NumParticipants" class="control-label">Antal deltagare</label>
                    <input asp-for="NumParticipants" class="form-control" />
                    <span asp-validation-for="NumParticipants" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ActivityId" class="control-label">Aktivitet</label>
                    <select asp-for="ActivityId" class="form-control" asp-items="ViewBag.ActivityId"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Skapa bokning" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Tillbaka till lista</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>
