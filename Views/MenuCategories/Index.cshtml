@model IEnumerable<ResAktWebb.Models.MenuCategory>

@{
    ViewData["Title"] = "Index";
}

<h1>@ViewBag.Menu</h1>

<p>
    <a asp-action="Create" asp-route-id="@ViewBag.route">Skapa ny menykategori</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.Name)*@Namn
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-controller="MenuItems" asp-action="Index" asp-route-id="@item.Id">Alternativ</a> |

                <a asp-action="Edit" asp-route-id="@item.Id">Redigera</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detaljer</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Ta bort</a>
            </td>
        </tr>
}
    </tbody>
</table>
